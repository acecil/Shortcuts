/* Configure the current version of the Shortcuts application. */

#define SHORTCUTS_MAJOR_VERSION 0
#define SHORTCUTS_MINOR_VERSION 3
#define SHORTCUTS_MICRO_VERSION 3

#define xstr(s) str(s)
#define str(s) #s
#define xwstr(s) wstr(s)
#define wstr(s) L#s

#define SHORTCUTS_VERSION_STRING xstr(SHORTCUTS_MAJOR_VERSION) "." xstr(SHORTCUTS_MINOR_VERSION) "." xstr(SHORTCUTS_MICRO_VERSION)
#define SHORTCUTS_VERSION_WSTRING xwstr(SHORTCUTS_MAJOR_VERSION) L"." xwstr(SHORTCUTS_MINOR_VERSION) L"." xwstr(SHORTCUTS_MICRO_VERSION)
